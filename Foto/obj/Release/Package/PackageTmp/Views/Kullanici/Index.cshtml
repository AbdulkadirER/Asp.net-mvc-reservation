
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
    int sayac = 0;
}

<h2>Index</h2>
<p> Hoşgeldiniz :  @Session["kullaniniAd"] @HttpContext.Current.User.Identity.Name</p>

@* table atılıp resimler kullanıcıya gösterilecek *@


<table class="table">
    <tr>
        <th scope="col">#</th>
        <th scope="col" style="text-align:center">Resimler</th>
        <th scope="col">Seçim</th>



    </tr>

    <tbody>

        @foreach (var item in ViewBag.resimler)
        {
            sayac++;
            <tr>
                <th scope="row">@sayac</th>
                <td style="text-align:center">
                    <a href="#" data-toggle="modal" data-target="#image-@item.RESIMID">
                        <img class="img-boyut" src="@item.RESIMYOL" width="200">
                    </a>
                </td>
                <td><input type="checkbox" /></td>




            </tr>
        }
    </tbody>

</table>
<!-- Modal -->
@foreach (var image in ViewBag.resimler)
{
    <div id="image-@image.RESIMID" class="modal fade " tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@*@image.Name*@ RESİMLER</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="text-align:center">
                    <img src="@image.RESIMYOL" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
}