@using (Html.BeginForm("Kaydet", "Rezervasyon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row ">
        @* Sol taraf *@

        <div class="col-sm ss">
            <div class="mb-3 form-inline">
